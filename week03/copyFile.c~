#include <stdio.h>
#include <stdlib.h>

int main()
{
  char c;
  FILE *from, *to;

  from = fopen("file.txt", "r");
  if (from == NULL)
  {
    perror("file.txt");
    exit(1);
  }

  if( to == NULL)
    {
      fclose(from);
      exit(1);
    }
  /* file exists, so start reading */
  while ((c = getc(from)) != EOF)
    putc(c, to);

  fclose(from);
  fclose(to);

  exit(0);
}
